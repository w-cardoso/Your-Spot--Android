<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProductSelectedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_selected_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quarto" />

        <LinearLayout
            android:id="@+id/product_selected_llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_selected_img"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/product_selected_txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:lines="2"
                android:text="Sofá branco de dois lugares"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_selected_txt_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="R$ 530,00"
                android:textColor="#2e7d32"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/product_selected_txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_selected_llayout"
            android:layout_margin="16dp"
            android:text="@string/product_selected_txt_description"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/product_selected_llayout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/product_selected_txt_description"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/product_selected_btn_add_cart"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_green"
                    android:text="Adicionar no Carrinho"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/product_selected_btn_favorite"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_transparent"
                    android:text="Favorito"
                    android:textColor="#00a551"
                    android:textSize="12sp" />


            </LinearLayout>

            <Button
                android:id="@+id/product_selected_btn_to_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/product_selected_llayout_btn"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_button_transparent"
                android:text="Visualizar Móvel"
                android:textColor="#00a551"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>