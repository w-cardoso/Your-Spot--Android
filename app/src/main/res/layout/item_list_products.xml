<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_list_products_img_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/banheiro" />

            <TextView

                android:id="@+id/item_list_products_txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_list_products_img_product"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="Descrição do Produto"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_list_products_txt_installment_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_list_products_txt_description"
                android:layout_below="@+id/item_list_products_txt_description"
                android:gravity="right"
                android:text="3 x R$200,00"
                android:textColor="#000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_list_products_txt_incash_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_list_products_txt_description"
                android:layout_below="@+id/item_list_products_txt_installment_value"
                android:gravity="right"
                android:text="avista R$600,00"
                android:textColor="#000"
                android:textSize="8sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>